<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:ASTools">
    <Style TargetType="{x:Type Button}" x:Key="NavigationButton">
        <Setter Property="ContentTemplate">
            <Setter.Value>
                <DataTemplate>
                    <TextBlock Text="{Binding}" 
                               TextWrapping="Wrap" 
                               TextAlignment="Center"
                               TextTrimming="CharacterEllipsis"/>
                </DataTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="ButtonBorder" CornerRadius="4" Background="Transparent" Width="62" Height="62" Margin="4">
                        <ContentPresenter Margin="4" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="ButtonBorder" Property="Background" Value="{StaticResource ItemColor_Hover}"/>
                            <Setter Property="Cursor" Value="Hand"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="ButtonBorder" Property="Background" Value="{StaticResource ItemColor_Pressed}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="{x:Type Button}" x:Key="SystemButton">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="Border"
                            CornerRadius="4"
                            Width="40" Height="30">
                        <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="{StaticResource ItemColor_Hover}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="{StaticResource ItemColor_Pressed}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="{x:Type Button}" x:Key="SystemButtonClose">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="Border"
                        CornerRadius="4"
                        Width="40" Height="30">
                        <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="{StaticResource RedColor_Default}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="{StaticResource RedColor_Presed}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="{x:Type Button}">
        <Setter Property="Foreground" Value="{StaticResource TextColor_Primary}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="Border"
                            CornerRadius="4"
                            Padding="10, 5"
                            Background="{StaticResource ItemColor_Default}"
                            BorderThickness="1"
                            BorderBrush="{StaticResource OutlineColor_Default}">
                        <Border.Effect>
                            <DropShadowEffect Color="Black"
                                              Opacity="0.5"
                                              ShadowDepth="1"
                                              Direction="270"
                                              BlurRadius="0"/>
                        </Border.Effect>
                        <ContentPresenter />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="{StaticResource ItemColor_Hover}" />
                            <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource OutlineColor_Hover}" />
                            <Setter Property="Foreground" Value="{StaticResource TextColor_Secondary}" />
                            <Setter Property="Cursor" Value="Hand"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="true">
                            <Setter TargetName="Border" Property="Background" Value="{StaticResource ItemColor_Pressed}" />
                            <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource OutlineColor_Presed}" />
                            <Setter Property="Foreground" Value="{StaticResource TextColor_Tertiary}" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="false">
                            <Setter TargetName="Border" Property="Background" Value="{StaticResource ItemColor_Disabled}" />
                            <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource OutlineColor_Disabled}" />
                            <Setter Property="Foreground" Value="{StaticResource TextColor_Disabled}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="{x:Type Button}" x:Key="AccentBtn">
        <Setter Property="Foreground" Value="{StaticResource TextColor_OnAccent_Primary}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="Border"
                            Padding="10, 5"
                            CornerRadius="4"
                            Background="{StaticResource AccentColor_Default}"
                            BorderThickness="1"
                            BorderBrush="{StaticResource AccentColor_Default}">
                        <Border.Effect>
                            <DropShadowEffect Color="Black"
                                              Opacity="0.5"
                                              ShadowDepth="1"
                                              Direction="270"
                                              BlurRadius="0"/>
                        </Border.Effect>
                        <ContentPresenter />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="{StaticResource AccentColor_Hover}" />
                            <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource AccentColor_Hover}" />
                            <Setter Property="Foreground" Value="{StaticResource TextColor_OnAccent_Secondary}" />
                            <Setter Property="Cursor" Value="Hand"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="true">
                            <Setter TargetName="Border" Property="Background" Value="{StaticResource AccentColor_Presed}" />
                            <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource AccentColor_Presed}" />
                            <Setter Property="Foreground" Value="{StaticResource TextColor_OnAccent_Tertiary}" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="false">
                            <Setter TargetName="Border" Property="Background" Value="{StaticResource ItemColor_Disabled}" />
                            <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource OutlineColor_Disabled}" />
                            <Setter Property="Foreground" Value="{StaticResource TextColor_OnAccent_Disabled}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="{x:Type Button}" x:Key="CancelBtn">
        <Setter Property="Foreground" Value="{StaticResource TextColor_OnAccent_Primary}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="Border"
                            Padding="10, 5"
                            CornerRadius="4"
                            Background="{StaticResource RedColor_Default}"
                            BorderThickness="1"
                            BorderBrush="{StaticResource RedColor_Default}">
                        <Border.Effect>
                            <DropShadowEffect Color="Black"
                                              Opacity="0.5"
                                              ShadowDepth="1"
                                              Direction="270"
                                              BlurRadius="0"/>
                        </Border.Effect>
                        <ContentPresenter />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="{StaticResource RedColor_Hover}" />
                            <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource RedColor_Hover}" />
                            <Setter Property="Foreground" Value="{StaticResource TextColor_OnAccent_Secondary}" />
                            <Setter Property="Cursor" Value="Hand"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="true">
                            <Setter TargetName="Border" Property="Background" Value="{StaticResource RedColor_Presed}" />
                            <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource RedColor_Presed}" />
                            <Setter Property="Foreground" Value="{StaticResource TextColor_OnAccent_Tertiary}" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="false">
                            <Setter TargetName="Border" Property="Background" Value="{StaticResource ItemColor_Disabled}" />
                            <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource OutlineColor_Disabled}" />
                            <Setter Property="Foreground" Value="{StaticResource TextColor_OnAccent_Disabled}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="{x:Type Button}" x:Key="BackBtn">
        <Setter Property="Foreground" Value="{StaticResource TextColor_Primary}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="Border"
                            Padding="6, 3"
                        CornerRadius="4"
                        Background="{StaticResource ItemColor_Default}">
                        <ContentPresenter />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="{StaticResource ItemColor_Hover}" />
                            <Setter Property="Foreground" Value="{StaticResource TextColor_Secondary}" />
                            <Setter Property="Cursor" Value="Hand"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="true">
                            <Setter TargetName="Border" Property="Background" Value="{StaticResource ItemColor_Pressed}" />
                            <Setter Property="Foreground" Value="{StaticResource TextColor_Tertiary}" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="false">
                            <Setter TargetName="Border" Property="Background" Value="{StaticResource ItemColor_Disabled}" />
                            <Setter Property="Foreground" Value="{StaticResource TextColor_Disabled}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="ToggleButton" x:Key="TBComboBox">
        <Setter Property="BorderBrush" Value="{StaticResource OutlineColor_Default}" />
        <Setter Property="Background" Value="{StaticResource ItemColor_Default}" />
        <Setter Property="Padding" Value="10, 0" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToggleButton">
                    <Border x:Name="BtnBorder"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="4"
                                BorderThickness="1"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                Background="{TemplateBinding Background}">
                        <Border.Effect>
                            <DropShadowEffect Color="Black"
                                                  Opacity="0.5"
                                                  ShadowDepth="1"
                                                  Direction="270"
                                                  BlurRadius="0"/>
                        </Border.Effect>
                        <ContentPresenter />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource ItemColor_Hover}" />
                            <Setter Property="BorderBrush" Value="{StaticResource OutlineColor_Hover}" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="BtnBorder" Property="BorderBrush" Value="{StaticResource AccentColor_Presed}" />
                            <Setter Property="BorderBrush" Value="{StaticResource AccentColor_Presed}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>