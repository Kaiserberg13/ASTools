<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:ASTools"
                    xmlns:converters="clr-namespace:ASTools.Converters">
    <converters:IconToOutlinedMultiConverter x:Key="IconToOutlinedMultiConverter" />
    <Style TargetType="{x:Type ListBoxItem}" x:Key="Selection">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ListBoxItem}">
                    <Border x:Name="Border"
                         CornerRadius="12"
                         Margin="0,0,5,0">
                        <ContentPresenter />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="{StaticResource ItemColor_Hover}"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="{StaticResource ItemColor_Pressed}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="{x:Type ListBoxItem}" x:Key="NavigationItem">
        <Setter Property="Foreground" Value="{StaticResource TextColor_Tertiary}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ListBoxItem}">
                    <Border x:Name="ButtonBorder" CornerRadius="4" Background="Transparent" Width="62" Height="62" Margin="4">
                        <DockPanel VerticalAlignment="Center">
                            <Border DockPanel.Dock="Left" x:Name="TabActive" CornerRadius="2" Width="4" Height="30" VerticalAlignment="Center" Background="Transparent"/>
                            <ContentPresenter x:Name="ContentPresenter" Margin="4,8,8,8" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </DockPanel>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="ButtonBorder" Property="Background" Value="{StaticResource ItemColor_Hover}"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="ButtonBorder" Property="Background" Value="{StaticResource ItemColor_Pressed}"/>
                            <Setter TargetName="TabActive" Property="Background" Value="{StaticResource AccentColor_Default}"/>
                            <Setter Property="Foreground" Value="{StaticResource TextColor_Accent_Primary}"/>
                            <Setter TargetName="ContentPresenter" Property="ContentTemplate">
                                <Setter.Value>
                                    <DataTemplate>
                                        <StackPanel>
                                            <Path Fill="{StaticResource TextColor_Accent_Primary}"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"
                                                  Width="24" Height="24" Stretch="Uniform"
                                                  Data="{Binding Icon}"/>
                                            <TextBlock Text="{Binding Title}" Visibility="Collapsed" HorizontalAlignment="Center" Foreground="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=Foreground}" TextAlignment="Center" TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="False">
                            <Setter TargetName="ContentPresenter" Property="ContentTemplate">
                                <Setter.Value>
                                    <DataTemplate>
                                        <StackPanel>
                                            <Path Fill="{StaticResource TextColor_Tertiary}"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"
                                                  Width="24" Height="24" Stretch="Uniform">
                                                <Path.Data>
                                                    <MultiBinding Converter="{StaticResource IconToOutlinedMultiConverter}">
                                                        <Binding RelativeSource="{RelativeSource AncestorType=ListBoxItem}" Path="DataContext.Icon"/>
                                                        <Binding RelativeSource="{RelativeSource AncestorType=ListBoxItem}" Path="DataContext.IconKey"/>
                                                    </MultiBinding>
                                                </Path.Data>
                                            </Path>
                                            <TextBlock Text="{Binding Title}" Style="{DynamicResource TextBlok_Caption}" HorizontalAlignment="Center" Foreground="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=Foreground}" TextAlignment="Center" TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>