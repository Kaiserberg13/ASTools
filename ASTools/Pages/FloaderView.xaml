<UserControl x:Class="ASTools.Pages.FloaderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:ASTools.Pages"
             xmlns:lcliz="clr-namespace:ASTools.Unit"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="36">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DockPanel>
            <StackPanel Orientation="Horizontal" Margin="5,0" VerticalAlignment="Center" DockPanel.Dock="Right">
                <RadioButton GroupName="View" Content="Таблица" IsChecked="True"/>
                <RadioButton GroupName="View" Content="строка"/>
            </StackPanel>
            <Button Content="{Binding Source={x:Static lcliz:LocalizationProvider.Instance}, Path=[FolderButtonDelete]}" Visibility="{Binding IsDefault}" Style="{StaticResource CancelBtn}" VerticalAlignment="Center" DockPanel.Dock="Right" Margin="5,0"/>
            <Button Content="{Binding Source={x:Static lcliz:LocalizationProvider.Instance}, Path=[FolderButtonEdit]}" Style="{StaticResource DefaultBtn}" VerticalAlignment="Center" DockPanel.Dock="Right" Margin="5,0"/>
            <TextBlock Text="{Binding Title}" Style="{StaticResource TextBlok_Title}"/>
        </DockPanel>
        <TabControl Style="{StaticResource FloaderControl}" 
                Grid.Row="1"
                ItemsSource="{Binding Items}"
                SelectedItem="{Binding SelectedItem}" Margin="0,10,0,0">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Header}"/>
                </DataTemplate>
            </TabControl.ItemTemplate>
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <ListBox ItemsSource="{Binding Content}"
                         BorderThickness="0"
                         Background="Transparent">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseDoubleClick">
                                <i:InvokeCommandAction
                                    Command="{Binding DataContext.OpenToolPageCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding SelectedItem, RelativeSource={RelativeSource AncestorType=ListBox}}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>   
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Width="56" Height="56" CornerRadius="8" VerticalAlignment="Center" Margin="4">
                                        <Border.Background>
                                            <ImageBrush Stretch="Fill" ImageSource="{Binding Icon}"/>
                                        </Border.Background>
                                    </Border>
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}" FontSize="14" FontWeight="Medium" Foreground="{StaticResource TextColor_Primary}" Margin="0,0,0,5"/>
                                        <TextBlock Text="{Binding Author}" FontSize="12" FontWeight="Regular" Foreground="{StaticResource TextColor_Secondary}"/>
                                    </StackPanel>
                                    <TextBlock Text="{Binding TagsDisplay}" FontSize="12" FontWeight="Regular" Foreground="{StaticResource TextColor_Secondary}" Grid.Column="2" VerticalAlignment="Center"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="{x:Type ListBoxItem}" BasedOn="{StaticResource Selection}">

                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </DataTemplate>
            </TabControl.ContentTemplate>
            <TabControl.ItemContainerStyle>
                <Style TargetType="{x:Type TabItem}" BasedOn="{StaticResource FloaderItem}"/>
            </TabControl.ItemContainerStyle>
        </TabControl>
    </Grid>
</UserControl>
