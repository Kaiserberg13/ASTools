<Window x:Class="ASTools.View.LoadScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ASTools.View"
        xmlns:lcliz="clr-namespace:ASTools.Unit"
        mc:Ignorable="d"
        Title="LoadScreen" Height="200" Width="325"    
        WindowStyle="None"
        Style="{StaticResource LoadScreen}"
        AllowsTransparency="True"
        Background="Transparent"
        Icon="/Assets/Logo80x80.png"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen">
    <WindowChrome.WindowChrome>
        <WindowChrome 
        CaptionHeight="200"
        GlassFrameThickness="0"
        />
    </WindowChrome.WindowChrome>
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock Text="{Binding Source={x:Static lcliz:LocalizationProvider.Instance}, Path=[LoadScreenText]}" Margin="0,0,0,10"/>
        <ProgressBar IsIndeterminate="True" Width="200" Height="20"/>
    </StackPanel>
</Window>
