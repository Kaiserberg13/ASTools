<Window x:Class="ASTools.View.ToolWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ASTools.View"
        xmlns:converters="clr-namespace:ASTools.Converters"
        xmlns:vm="clr-namespace:ASTools.ModelViews"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="ToolWindow" Height="520" Width="380">
    <Window.Resources>
        <converters:BoolToBrushConverter x:Key="BoolToForeground" />
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility" />
        <converters:FilePathToPaddingConverter x:Key="FileToPadding" />
        <converters:NullOrEmptyToBooleanConverter x:Key="NullOrEmptyToBooleanConverter" />
        <DataTemplate x:Key="CategoryTemplate">
            <TextBlock Text="{Binding Text}"
                   Style="{StaticResource TextBlok_Subtitle}"
                   HorizontalAlignment="Center"
                   TextAlignment="Center"
                   Margin="0, 10"/>
        </DataTemplate>
        <DataTemplate x:Key="BoolRowTemplate">
            <StackPanel Orientation="Horizontal"
                HorizontalAlignment="Left">
                <ItemsControl ItemsSource="{Binding Bools}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemContainerStyle>
                        <Style TargetType="ContentPresenter">
                            <Setter Property="Margin" Value="0,0,12,0" />
                        </Style>
                    </ItemsControl.ItemContainerStyle>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Width="98"
                            Height="48"
                            Command="{Binding ToggleCommand}"
                            IsEnabled="{Binding IsEnabled}">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="Border"
                                        CornerRadius="4"
                                        BorderThickness="0,0,0,1"
                                        BorderBrush="{StaticResource OutlineColor_Down_Default}">
                                            <Border x:Name="BorderDown"
                                            CornerRadius="4"
                                            Padding="10, 5"
                                            Background="{StaticResource ItemColor_Default}"
                                            BorderThickness="1,1,1,0"
                                            BorderBrush="{StaticResource OutlineColor_Default}">
                                                <StackPanel HorizontalAlignment="Center">
                                                    <TextBlock Text="{Binding Icon, FallbackValue='🔘'}" 
                                                       FontSize="18"
                                                       Margin="0,6,0,0"
                                                       HorizontalAlignment="Center"
                                                       Foreground="{Binding IsActive, Converter={StaticResource BoolToForeground}, FallbackValue={StaticResource TextColor_Primary}}" />
                                            <TextBlock Text="{Binding Text, FallbackValue='Нет текста'}"
                                                       FontFamily="Segoe UI Variable"
                                                       FontSize="12"
                                                       Margin="0,4,0,0"
                                                       HorizontalAlignment="Center"
                                                       Foreground="{Binding IsActive, Converter={StaticResource BoolToForeground}, FallbackValue={StaticResource TextColor_Primary}}" />
                                        </StackPanel>
                                    </Border>
                                </Border>
                                        <ControlTemplate.Triggers>
                                            <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="{StaticResource AccentColor_Default}" />
                                                <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource AccentColor_Presed}" />
                                                <Setter TargetName="BorderDown" Property="BorderBrush" Value="{StaticResource AccentColor_Hover}" />
                                            </DataTrigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="{StaticResource AccentColor_Presed}" />
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="{StaticResource ItemColor_Hover}" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="Transparent" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                <Setter Property="Background" Value="{StaticResource AccentColor_Default}" />
                                                <Setter Property="BorderBrush" Value="{StaticResource AccentColor_Presed}" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="InputTemplate">
            <Grid Width="318" Margin="0,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Label Grid.Row="0"
               Content="{Binding Placeholder, FallbackValue='Введите текст'}"
               Foreground="{StaticResource TextColor_Tertiary}"
               FontFamily="Segoe UI Variable"
               FontSize="12"
               Margin="0,0,0,4" />

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBox Text="{Binding Text, UpdateSourceTrigger=PropertyChanged}"
                     FontFamily="Segoe UI Variable"
                     FontSize="14"
                     BorderThickness="4"
                     BorderBrush="{StaticResource OutlineColor_Default}"
                     Background="{StaticResource ItemColor_Default}"
                     Padding="{Binding IsFilePath, Converter={StaticResource FileToPadding}}"
                     IsEnabled="{Binding IsEnabled}">
                        <TextBox.Style>
                            <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                            <Border x:Name="BorderDown"
                                            BorderBrush="{StaticResource OutlineColor_Down_Default}"
                                            CornerRadius="4"
                                            BorderThickness="0,0,0,1">
                                                <Border x:Name="Border"
                                                BorderBrush="{StaticResource OutlineColor_Default}"
                                                Background="{StaticResource ItemColor_Default}"
                                                CornerRadius="4"
                                                BorderThickness="1,1,1,0">
                                                    <ScrollViewer x:Name="PART_ContentHost"
                                                          Margin="10,5"
                                                          VerticalAlignment="Center"
                                                          Focusable="False"/>
                                                </Border>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsKeyboardFocused" Value="True">
                                                    <Setter TargetName="BorderDown" Property="BorderBrush" Value="{StaticResource AccentColor_Default}" />
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Border" Property="Background" Value="{StaticResource ItemColor_Hover}" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                    <Button Visibility="{Binding IsFilePath, Converter={StaticResource BoolToVisibility}}"
                    Width="28"
                    Height="28"
                    Grid.Column="1"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Margin="0,0,6,0"
                    Command="{Binding PickCommand}"
                    Background="Transparent">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="ButtonBorder"
                                Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                BorderThickness="1"
                                BorderBrush="{StaticResource OutlineColor_Default}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="ButtonBorder" Property="Background" Value="{StaticResource ItemColor_Hover}" />
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="ButtonBorder" Property="Background" Value="{StaticResource AccentColor_Presed}" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent" />
                            </Style>
                        </Button.Style>
                        <TextBlock Text="&#xE188;"
                           FontFamily="Segoe MDL2 Assets"
                           FontSize="18" />
                    </Button>
                </Grid>
            </Grid>
        </DataTemplate>
        <vm:UIItemTemplateSelector x:Key="UIItemSelector"
                                   CategoryTemplate="{StaticResource CategoryTemplate}"
                                   BoolRowTemplate="{StaticResource BoolRowTemplate}"
                                   InputTemplate="{StaticResource InputTemplate}" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Grid.Row="0">
            <ItemsControl ItemsSource="{Binding Items}"
                          Margin="21"
                          ItemTemplateSelector="{StaticResource UIItemSelector}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Width="318" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </ScrollViewer>

        <Button Content="Run Tool"
                Style="{StaticResource AccentBtn}"
                HorizontalAlignment="Center" 
                Grid.Row="1"
                Margin="10"
                Command="{Binding RunCommand}" />
    </Grid>
</Window>
