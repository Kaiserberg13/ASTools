<Window x:Class="ASTools.View.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ASTools.View"
        mc:Ignorable="d"
        Title="Settings" Height="450" Width="800"
        WindowStyle="None"
        Style="{StaticResource WindowStyle}"
        AllowsTransparency="True"
        Background="Transparent"
        Icon="/Assets/Logo80x80.png"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen">
    <WindowChrome.WindowChrome>
        <WindowChrome 
        ResizeBorderThickness="{Binding ResizeBorderThickness}"
        CaptionHeight="{Binding TitleHight}"
        GlassFrameThickness="0"
        />
    </WindowChrome.WindowChrome>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Label Content="Tools directory" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBlock Text="{Binding ToolsDir}" Margin="5" VerticalAlignment="Center" Grid.Column="1"/>
                <Button Content="Browse" Command="{Binding SelectFolderCommand}" CommandParameter="toolsDir" Grid.Column="2" Margin="10,2,5,2"/>
                <TextBlock Text="{Binding NewToolsDir}" Margin="5" VerticalAlignment="Center" Grid.Column="3"/>

                <Label Content="Guides directory" Grid.Row="1" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBlock Text="{Binding GuidesDir}" Margin="5" VerticalAlignment="Center" Grid.Column="1" Grid.Row="1"/>
                <Button Content="Browse" Command="{Binding SelectFolderCommand}" CommandParameter="guidesDir" Grid.Column="2" Grid.Row="1" Margin="10,2,5,2"/>
                <TextBlock Text="{Binding NewGuidesDir}" Margin="5" VerticalAlignment="Center" Grid.Column="3" Grid.Row="1"/>

            </Grid>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,5">
            <Button Content="Apply" Command="{Binding SaveCommand}" IsEnabled="{Binding IsChanged}" Padding="12,6" Margin="5,0"/>
            <Button Content="Cansel" Command="{Binding CancelCommand}" IsEnabled="{Binding IsSaving}" Padding="12,6" Margin="5,0"/>
            <Button Content="Support us" Command="{Binding OpenSupportBrowserCommand}" Padding="12,6" Margin="5,0"/>
        </StackPanel>
    </Grid>
</Window>
