<Window x:Class="ASTools.View.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ASTools.View"
        xmlns:lcliz="clr-namespace:ASTools.Unit"
        mc:Ignorable="d"
        Title="{Binding Source={x:Static lcliz:LocalizationProvider.Instance}, Path=[TitleSettins]}" Height="450" Width="800"
        WindowStyle="None"
        Style="{StaticResource WindowStyle}"
        AllowsTransparency="True"
        Background="Transparent"
        Icon="/Assets/Logo80x80.png"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen">
    <WindowChrome.WindowChrome>
        <WindowChrome 
        ResizeBorderThickness="{Binding ResizeBorderThickness}"
        CaptionHeight="{Binding TitleHight}"
        GlassFrameThickness="0"
        />
    </WindowChrome.WindowChrome>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Label Content="{Binding Source={x:Static lcliz:LocalizationProvider.Instance}, Path=[SettingsSettingTitleToolsDir]}" Style="{StaticResource Label_BodyStrong}" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBlock Text="{Binding ToolsDir}" Style="{StaticResource TextBlok_Body}"  Margin="5" VerticalAlignment="Center" Grid.Column="1"/>
                <Button Content="Browse" Command="{Binding SelectFolderCommand}" CommandParameter="toolsDir" VerticalAlignment="Center" Grid.Column="2" Margin="10,2,5,2"/>
                <TextBlock Text="{Binding NewToolsDir}" Style="{StaticResource TextBlok_Body}" Foreground="{StaticResource TextColor_Secondary}"  Margin="5" VerticalAlignment="Center" Grid.Column="3"/>

                <Label Content="{Binding Source={x:Static lcliz:LocalizationProvider.Instance}, Path=[SettingsSettingTitleGuidesDir]}" Style="{StaticResource Label_BodyStrong}" Grid.Row="1" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBlock Text="{Binding GuidesDir}" Style="{StaticResource TextBlok_Body}"  Margin="5" VerticalAlignment="Center" Grid.Column="1" Grid.Row="1"/>
                <Button Content="Browse" Command="{Binding SelectFolderCommand}" CommandParameter="guidesDir" VerticalAlignment="Center" Grid.Column="2" Grid.Row="1" Margin="10,2,5,2"/>
                <TextBlock Text="{Binding NewGuidesDir}" Style="{StaticResource TextBlok_Body}" Foreground="{StaticResource TextColor_Secondary}" Margin="5" VerticalAlignment="Center" Grid.Column="3" Grid.Row="1"/>

                <StackPanel Grid.Row="2" Grid.ColumnSpan="4">
                    <Label Content="{Binding Source={x:Static lcliz:LocalizationProvider.Instance}, Path=[SettingsSettingTitleSelectionLang]}" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <ComboBox
                        ItemsSource="{Binding LangItems}"
                        DisplayMemberPath="Label"
                        SelectedValuePath="Value"
                        SelectedValue="{Binding SelectedLang, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Style="{StaticResource CustomComboBox}"
                        ItemContainerStyle="{StaticResource CustomComboBoxItem}"
                        IsEditable="False" />
                </StackPanel>
                
            </Grid>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,5">
            <Button Content="{Binding Source={x:Static lcliz:LocalizationProvider.Instance}, Path=[SettingsButtonApply]}" Command="{Binding SaveCommand}" IsEnabled="{Binding IsChanged}" Style="{StaticResource AccentBtn}" Margin="5,0" FontFamily="Segoe UI"/>
            <Button Content="{Binding Source={x:Static lcliz:LocalizationProvider.Instance}, Path=[SettingsButtonCancel]}" Command="{Binding CancelCommand}" IsEnabled="{Binding IsNotSaving}" Style="{StaticResource CancelBtn}" Margin="5,0"/>
            <Button Content="{Binding Source={x:Static lcliz:LocalizationProvider.Instance}, Path=[SettingsButtonSupportUs]}" Command="{Binding OpenSupportBrowserCommand}" Margin="5,0"/>
        </StackPanel>
    </Grid>
</Window>
